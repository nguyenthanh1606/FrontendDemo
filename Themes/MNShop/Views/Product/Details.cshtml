@model Frontend.Models.ProductDetailsViewModel
@using Store.Service.ProductServices
@using Frontend.Infrastructure.Helpers
@using Admin.Infrastructure.Helpers

@{
    ViewBag.Title = Model.Title;
    ViewBag.Description = Model.Summary.RemoveHtml();
    if (!string.IsNullOrEmpty(Model.DefaultImageUrls))
    {
        ViewBag.Image = Url.Content(Model.DefaultImageUrls, true);
    }

    string themeComponentViewPath = "~/Themes/" + TabWeb.GetCurrentTheme() + "/Views/Component/{0}.cshtml";
    string themeHomeViewPath = "~/Themes/" + TabWeb.GetCurrentTheme() + "/Views/Home/{0}.cshtml";
}

@section css{
}
<main class="product-detail">
    <div class="banner-page">
        <div class="picture-page">
            <img class="img-fluid w-100" src="@Model.ProductGroup.BannerUrl" alt="@Model.ProductGroup.Title" />
        </div>
        <div class="wrapper">
            <div class="banner-page--content">
                <img src="~/Themes/MNShop/Images/Logo-white.png" alt="MN Shop">
                <h2 class="title">In lại các tác phẩm nghệ thuật đẹp như bản gốc</h2>
            </div>
        </div>
    </div> 
    @{Html.RenderAction(MVC.Component.Display(5, "AvsNotify"));}
    <div class="container breadcrumb-ds">
        @Html.Breadcrumb(Frontend.Infrastructure.Utility.BreadcrumbType.ProductGroup, Model.ProductGroup.GroupID, new { @class = "breadcrumb" })
    </div>
    <div class="product--detail_container container">
        <div class="product--detail_left">
            <div class="pr-top_thumbnail">
                <div thumbsSlider="" class="swiper thumbsSlider">
                    <div class="swiper-wrapper">
                        @foreach (var item in Model.ListImages)
                        {
                            <div class="swiper-slide">
                                <div class="slider-banner-image">
                                    <div class="thumnails-template">
                                        <div class="thumnails-content">
                                            <img src="@item" class="img-fluid" alt="MN Shop">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div style="--swiper-navigation-color: #fff; --swiper-pagination-color: #fff" class="swiper previewSwiper">
                    <div class="swiper-wrapper">
                        @foreach (var item in Model.ListImages)
                        {
                            <div class="swiper-slide">
                                <div class="thumbnail-image">
                                    <div class="thumnails-template">
                                        <div class="thumnails-content">
                                            <img src="@item" class="img-fluid" alt="MN Shop">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="swiper-button-next"></div>
                    <div class="swiper-button-prev"></div>
                </div>
            </div>
            <div class="pr-top_content">
                <h3 class="pr-top_content__title">@Model.Title</h3>
                <div class="pr-top_content__body">
                    @Html.Raw(Model.Body)
                </div>
            </div>
            <hr style="border-top: 1px solid #D1D1D1" />
            @{Html.RenderAction(MVC.Component.GetContentForGroupID(string.Format(themeHomeViewPath, "ListCamNang"), ThemeConfig.GetComponent("GroupCamNang"), Store.Service.Service.DistributionOrder.Lastest, true, ""));}


            <hr style="border-top: 1px solid #D1D1D1" />
            @{Html.RenderAction("ListProductSameGroup", new { id = Model.ProductID });}
        </div>
        <div class="product--detail_right">
            <div class="product-buy only-pc" id="price-app">
                <h3 class="title">@Model.Title</h3>
                <div class="product-info">
                    @Html.Raw(Model.Specification)
                </div>
                <div class="product-type">
                    <h3 class="title">Chọn quy cách theo nhu cầu của bạn</h3>
                    <span>Quam id leo in vitae turpis massa sed. Velit sed ullamcorper morbi tincidunt ornare. </span>
                    <div class="product-type--item">
                        <div class="form-group">
                            <label for="thanhPhamList">Chọn thành phẩm:</label>
                            <select v-model="selectedType" v-on:change="handleSelectType" class="form-control">
                                <option value="type1">Tranh làm quà tặng</option>
                                <option value="type2">Chỉ in tranh</option>
                                <!-- Other options -->
                            </select>
                        </div>
                    </div>
                    <div class="product-type--item">
                        <div class="form-group">
                            <label for="kichThuocList">Chọn khổ thành phẩm:</label>
                            <select v-if="selectedType" v-model="selectedSize" v-on:change="handleSelectType" class="form-control">
                                <option v-for="item in filteredItems" :key="item.id" :value="item.size">
                                    {{ item.size }}
                                </option>
                            </select>
                            <p class="sub">
                                <ul>
                                    <li>Kích thước nội dung tranh: <span> {{ priceSelected.sizeDefault }}</span></li>
                                    <li>Loại khung dùng cho tranh: <span> {{ priceSelected.frameType }}</span></li>
                                </ul>
                            </p>
                        </div>
                    </div>
                    <div class="product-type--item">
                        <div class="form-group">
                            <label for="printTypeList">Chọn chất liệu in:</label>
                            <select v-if="selectedType" v-model="selectedDG" v-on:change="handleSelectType" class="form-control">
                                <option v-for="item in filteredLoaiDongGoi" :key="item.id" :value="item.key">
                                    {{ item.value }}
                                </option>
                            </select>
                        </div>
                    </div>
                    <div class="product-type--item">
                        <div class="form-group">
                            <small><i>Tranh in canvas làm quà tặng sẽ được đóng khung và kèm hộp quà cao cấp từ MN ArtHouse</i></small>
                        </div>
                    </div>
                </div>
                @using (Ajax.BeginForm("VersionDetails", "Product", null,
new AjaxOptions { HttpMethod = "POST", OnSuccess = "vmProduct.SelectVersionSuccess" }, new { id = "version_form" }))
                {
                    @Html.HiddenFor(m => m.ProductID)
                    @Html.AntiForgeryToken()
            <div class="product-card">


                @Html.TextBox("Quantity", 1, new { name = "Quantity", @class = "form-control text-center d-none" })
                <input type="text" v-model="priceSelected.price[selectedDG]" name="CustomPrice" class="form-control text-center d-none">

                <div class="product-card--price">
                    <span>Giá thành phẩm</span>
                    <h3>@string.Format("{0:n0}", "{{ priceSelected.price[selectedDG] }}") <span>VNĐ</span></h3>
                </div>
                <button class="text-uppercase btn btn-1" id="mySizeChart" onclick="AddToCart(AddToCartSuccess)">
                    Đặt in
                </button>
            </div>
                }


                <div class="product-plugin">
                    <ul>
                        <li>
                            <div class="icon">
                                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="29" height="29" viewBox="0 0 29 29">
                                    <image id="frame_1_" data-name="frame (1)" width="29" height="29" xlink:href="data:img/png;base64,"></image>
                                </svg>
                            </div>
                            <span>Tranh luôn chuẩn bị sẵn khung (nếu có chọn khung) &amp; móc khi giao</span>
                        </li>
                        <li>
                            <div class="icon">
                                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="43" height="25" viewBox="0 0 43 25">
                                    <image id="free-shipping" width="43" height="25" xlink:href="data:img/png;base64,"></image>
                                </svg>

                            </div>
                            <span>Miễn phí giao hàng trong phạm vi Đồng Nai &amp; Tp. Hồ Chí Minh</span>
                        </li>
                        <li>
                            <div class="icon">
                                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="35" height="34" viewBox="0 0 35 34">
                                    <image id="package" width="35" height="34" xlink:href="data:img/png;base64,"></image>
                                </svg>

                            </div>
                            <span>Tranh được đóng góp cẩn thận theo tiểu chuẩn &amp; kích thước in</span>
                        </li>
                        <li>
                            <div class="icon">
                                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="34" height="36" viewBox="0 0 34 36">
                                    <image id="warranty" width="34" height="36" xlink:href="data:img/png;base64,"></image>
                                </svg>

                            </div>
                            <span>Sản phẩm tranh được bảo hành và đổi trả, hoàn tiền trong 30 ngày</span>
                        </li>
                    </ul>
                </div>
                <div class="product-policy text-center">
                    <p>Tìm hiểu thêm về</p>
                    <a href="#!">Chính sách bán hàng</a>
                </div>
            </div>
            @{Html.RenderAction(MVC.Component.GetContentForGroupID(string.Format(themeHomeViewPath, "ListHuongDan"), ThemeConfig.GetComponent("GroupHuongDan"), Store.Service.Service.DistributionOrder.Lastest, true, ""));}

        </div>
    </div>

</main>

@section scripts{
    <script>
        var swiper = new Swiper(".thumbsSlider", {
            direction: "vertical",
            autoHeight: true,
            loop: true,
            spaceBetween: 17,
            slidesPerView: 4,
            freeMode: true,
            watchSlidesProgress: true,
        });
        var swiper2 = new Swiper(".previewSwiper", {
            loop: true,
            spaceBetween: 10,
            navigation: {
                nextEl: ".swiper-button-next",
                prevEl: ".swiper-button-prev",
            },
            thumbs: {
                swiper: swiper,
            },
        });
    </script>
