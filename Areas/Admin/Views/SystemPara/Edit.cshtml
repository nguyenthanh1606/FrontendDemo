@model Admin.Models.SysParaViewModel

@{
    ViewBag.Title = Resource.ParametersSystem;
}

@section css{
    @Styles.Render("~/Content/css/elFinder")
}

<div class="page-title">
    <div class="title_left">
        <h3>
            @Resource.ParametersSystem
            <small>@Resource.Edit</small>
        </h3>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            <span class="control-label col-md-2 col-sm-3 col-xs-12">ID</span>
            <div class="col-md-10 col-sm-9 col-xs-12">
                @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <span class="control-label col-md-2 col-sm-3 col-xs-12">@Resource.ParamenterName</span>
            <div class="col-md-10 col-sm-9 col-xs-12">
                @Html.EditorFor(model => model.ParaName, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                @Html.ValidationMessageFor(model => model.ParaName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2 col-sm-3 col-xs-12">@Resource.ParameterValue</span>
            <div class="col-md-10 col-sm-9 col-xs-12">
                @Html.EditorFor(model => model.ParaValue, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ParaValue, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2 col-sm-3 col-xs-12">@Resource.Description</span>
            <div class="col-md-10 col-sm-9 col-xs-12">
                @Html.Raw(@Html.TextAreaFor(model => model.Description, new { @class = "form-control ck_editor" }))
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-sm-offset-3 col-md-10 col-sm-9 col-xs-12">
                <input type="submit" value="@Resource.Save" class="btn btn-primary" />
                @Html.ActionLink(@Resource.BackToList, "Index", "SystemPara", new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}


@section scripts{
    @Scripts.Render("~/bundles/elFinder")
    <script type="text/javascript" src="~/Scripts/ckeditor/ckeditor.js"></script>
    <script type="text/javascript" src="~/Scripts/ckeditor/adapters/jquery.js"></script>

    <script>
        $(document).ready(function () {
            initCkEl('@Url.Action("GetFile", "Files")', '@Request.Cookies["lang"].Value.Substring(0, 2)');
            InitElf('@Url.Action("GetFile", "Files")', '@Request.Cookies["lang"].Value.Substring(0, 2)');
            ReplaceCKEditor();
            ReplaceSelect2('@Request.Cookies["lang"].Value.Substring(0, 2)');
        });
      
    </script>
}





