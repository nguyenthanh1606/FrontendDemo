@model Admin.Models.ConfigDisplayViewModel
@{
    ViewBag.Title = Resource.ConfigDisplay;
}

<div class="page-title">
    <div class="title_left">
        <h3>@Resource.ConfigDisplay</h3>
    </div>
    <div class="title_right">
        <div class="pull-right">
            <button class="btn btn-primary" type="button" onclick="$('#form_properties').submit()">@Resource.Save</button>
        </div>
    </div>
</div>
<table class="table table-hover">
    <thead class="thead-inverse">
        <tr>
            <th class="width-15">
                @Resource.PropertyName
            </th>
            <th class="width-5">
                @Resource.IsAdvanceProperty
            </th>
        </tr>
    </thead>
    <tbody>
        @using (Ajax.BeginForm("ConfigDisplay", null, new AjaxOptions {
            HttpMethod = "POST", OnSuccess= string.Format("ShowAlertDialog('{0}')", Resource.UpdateSuccess),
            OnFailure = string.Format("ShowAlertDialog('{0}')", Resource.UnknowErrorMessage)
        },
            new { id = "form_properties" }))
        {
            @Html.AntiForgeryToken()
            @Html.Hidden("Name", Model.Name)
            foreach (var property in Model.ListProperties)
            {
                <tr>
                    <td>
                        @property.Value.Name
                    </td>
                    <td>
                        <label class="checkbox-inline">
                            <input type="checkbox" name="ListProperties" value="@property.Key" @(property.Value.IsAdvance ? "checked" : "") />@Resource.True
                        </label>
                    </td>
                </tr>
            }
        }
        
    </tbody>
</table>