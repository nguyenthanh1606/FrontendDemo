@model Admin.Models.ProductFilterViewModel

@{
    ViewBag.Title = Resource.Product;
}

<div class="page-title">
    <div class="title_left">
        <h3>@Resource.Product</h3>
    </div>
    <div class="title_right">
        <div class="pull-right">
            @Html.ActionLink(@Resource.Create, "Create", null, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>

<div class="main-content">
    @using (Ajax.BeginForm("List", "Product", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "list", HttpMethod = "Get" }, new { id = "filter_div" }))
    {
        <div class="form-group clearfix">
            <div class="col-md-4 col-sm-6 col-xs-12">
                <label class="control-label">@Resource.ProductGroup</label>
                @Html.DropDownListFor(m => m.GroupId, ViewBag.ListGroups as SelectList, @Resource.All, new { @class = "form-control ddl_select2" })
            </div>
            <div class="col-md-4 col-sm-6 col-xs-12">
                <label class="control-label">@Resource.Status</label>
                @Html.DropDownListFor(m => m.Status, ViewBag.ListStatus as SelectList, new { @class = "form-control ddl_select2" })
            </div>
            <div class="col-md-4 col-sm-12 col-xs-12">
                <label class="control-label">@Resource.Title</label>
                <div class="input-group">
                    @Html.TextBoxFor(m => m.SearchString, new { @class = "form-control", @placeholder = @Resource.SearchPlaceholder })
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                    </span>
                </div>
            </div>
        </div>
    }

    <div id="list">
        @{Html.RenderAction("List", "Product", new { Model, Page = ViewBag.Page });}
    </div>
</div>

<div id="product-reselling-confirmation" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="product-delete-confirmation-title">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                <h4 class="modal-title" id="product_title"></h4>
            </div>
            @using (Ajax.BeginForm("ReSelling", "Product", new AjaxOptions { HttpMethod = "POST", OnSuccess = "ResellingSuccess" }))
            {
                <div class="form-horizontal">
                    <div class="modal-body">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" id="product_id" />
                        @Resource.AreYouSure
                    </div>
                    <div class="modal-footer">
                        <span class="btn btn-default" data-dismiss="modal">@Resource.Cancel</span>
                        <button type="submit" class="btn btn-primary pull-right">
                            @Resource.Reselling
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section scripts{
    <script>
        $('#GroupId, #Status').change(function () {
            $('#filter_div').submit();
        });

        $('#filter_div').submit(function () {
            ChangeUrl({ GroupId: $('#GroupId').val(), Status: $('#Status').val(), SearchString: $('#SearchString').val() });
        });

        $(document).ready(function () {
            ReplaceSelect2('@Request.Cookies["lang"].Value.Substring(0, 2)');
        });

        function ResellConfirm(id, title) {
            $('#product_id').val(id);
            $('#product_title').text(title);
            $('#product-reselling-confirmation').modal('show');
        }

        function ResellingSuccess(data) {
            $('#product-reselling-confirmation').modal('hide');
            ShowAlertDialog(data.msg);
            $('#filter_div').submit();
        }
    </script>
}