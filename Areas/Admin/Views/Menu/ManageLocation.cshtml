@using Resources
@using Admin.Models
@using Store.Service.Helper.ExtensionMethod;
@model Admin.Models.MenuSearchViewModel

<div class="page-title">
    <div class="title_left">
        <h3>@Resource.ManageLocations</h3>
    </div>
</div>

<div class="main-content">
    <h5>Your theme supports 2 menus. Select which menu appears in each location.</h5>
    <div class="col-md-6">
        @using (Html.BeginForm("ManageLocation", "Menu"))
        {
            <table class="table table-hover">
                <thead class="thead-inverse">
                    <tr>
                        <th class="width-10">
                            @Resource.Location
                        </th>
                        <th class="width-10">
                            @Resource.AssignedMenu
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Store.Service.Service.MenuType.MainMenu.GetDescription()
                        </td>
                        <td>
                            @Html.DropDownListFor(model => model.MainMenu, ViewBag.ListMenu as SelectList, string.Format(Resource.SelectPlaceHolder, Resource.Menu), new { @class = "form-control " })
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Store.Service.Service.MenuType.FooterMenu.GetDescription()
                        </td>
                        <td>
                            @Html.DropDownListFor(model => model.FooterMenu, ViewBag.ListMenu as SelectList, string.Format(Resource.SelectPlaceHolder, Resource.Menu), new { @class = "form-control " })
                        </td>
                    </tr>
                </tbody>

            </table>

            <div class="row">
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input type="submit" value="@Resource.Save" class="btn btn-primary" />
                </div>
            </div>
        }

    </div>
</div>


@section scripts
{

}