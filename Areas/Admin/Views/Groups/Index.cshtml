@model Admin.Models.GroupFilterViewModel
@{
    ViewBag.Title = Resource.Groups;
}

<link href="~/Content/css/PagedList.css" rel="stylesheet" />


<div class="page-title">
    <div class="title_left">
        <h3>@Resource.Groups</h3>
    </div>
    <div class="title_right">
        <div class="pull-right">
            @Html.ActionLink(@Resource.CreateNew, "Create", null, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>

<div class="main-content">
    @using (Ajax.BeginForm("ListGroup", "Groups", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "list", HttpMethod = "Get" }, new { id = "filter_div" }))
    {
        <div class="col-md-4 col-sm-6 col-xs-12">
            <label class="control-label">@Resource.GroupParent</label>
            @Html.DropDownListFor(m => m.GroupParent, ViewBag.ListGroupsParent as SelectList, @Resource.All, new { @class = "form-control" })
        </div>
        <div class="form-group clearfix">
            <div class="col-md-4 col-sm-6 col-xs-12">
                <label class="control-label">@Resource.Status</label>
                @Html.DropDownListFor(m => m.Status, ViewBag.ListStatus as SelectList, @Resource.All, new { @class = "form-control" })
            </div>
            <div class="col-md-4 col-sm-6 col-xs-12">
                <label class="control-label">@Resource.Layout</label>
                @Html.DropDownListFor(m => m.Layout, ViewBag.ListGroupLayout as SelectList, @Resource.All, new { @class = "form-control" })
            </div>
            <div class="col-md-12 col-sm-6 col-xs-12">
                <label class="control-label">@Resource.Search</label>
                <div class="input-group">
                    @Html.TextBoxFor(m => m.SearchString, null, new { @class = "form-control", @placeholder = @Resource.SearchPlaceholder, @aria_describedby = "basic-addon2" })
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                    </span>
                </div>
            </div>
        </div>
    }

    <div id="list">
        @{Html.RenderAction("ListGroup", "Groups", new { GroupParent = ViewBag.GroupParent, Status = ViewBag.Status, Layout = ViewBag.Layout, SearchString = ViewBag.SearchString, page = ViewBag.Page });}
    </div>
</div>

@section scripts{
    <script>
        $('#Status, #Layout, #GroupParent').change(function () {
            $('#filter_div').submit();
        });

        $('#filter_div').submit(function () {
            ChangeUrl({ Status: $('#Status').val(), Layout: $('#Layout').val(), GroupParent: $('#GroupParent').val(), SearchString: $('#SearchString').val() });
        });

        $(document).ready(function () {
            $('select').select2({
                theme: "bootstrap",
                language: '@Request.Cookies["lang"].Value.Substring(0, 2)'
            });
        });

    </script>
}