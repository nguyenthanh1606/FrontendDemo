@model Admin.Models.ComponentViewModel
@using Store.Service.Service;
@using Admin.Infrastructure.Helpers

<div class="form-group">
    @*<input type="hidden" v-bind:value="index" name="Components.Index" />*@

    <div class="col-lg-3" style="display:none;">
    </div>
    <div class="col-lg-3">
        <label class="control-label">@ResourceAdmin.Component</label>
        @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
    </div>
    <div class="col-lg-3">
        <label class="control-label">@ResourceAdmin.GetBasedType</label>
        @Html.DropDownListFor(model => model.ComponentType, ViewBag.ListComponentType as SelectList, string.Format(Resource.SelectPlaceHolder, Resource.Groups),
        new { @class = "form-control" })
    </div>
    <div class="col-lg-3">
        <div class="form-group" v-show="EntityTypeSelect('@ComponentType.Group') || EntityTypeSelect('@ComponentType.Content')">
            <label class="control-label">@ResourceAdmin.Groups</label>
            @Html.DropDownListFor(model => model.EntityID, ViewBag.ListGroup as SelectList, string.Format(Resource.SelectPlaceHolder, Resource.Groups),
        new { @class = "form-control" })
        </div>
        <div class="form-group" v-show="EntityTypeSelect('@ComponentType.ProductGroup')">
            <label class="control-label">@ResourceAdmin.ProductGroup</label>
        @Html.DropDownListFor(model => model.EntityID, ViewBag.ListProductGroup as SelectList, string.Format(Resource.SelectPlaceHolder, Resource.ProductGroup),
        new { @class = "form-control" })
    </div>
</div>
<div class="col-lg-3">
    <label class="control-label">@ResourceAdmin.ItemsPerComponent</label>
    @Html.TextBoxFor(model => model.TotalItems, new { @class = "form-control" })
</div>
</div>
