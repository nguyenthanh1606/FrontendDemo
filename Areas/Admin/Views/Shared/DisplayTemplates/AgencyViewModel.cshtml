@model Admin.Models.AgencyViewModel
@using Resources;

@Html.HiddenFor(m => m.AgencyID)

<div class="form-group">
    @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2 col-sm-3 col-xs-12" })
    <div class="col-md-10 col-sm-9 col-xs-12">
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @readonly = true })
    </div>
</div>

<div class="form-group">
    @Html.Label(@Resource.City, new { @class = "control-label col-md-2 col-sm-3 col-xs-12" })
    <div class="col-md-10 col-sm-9 col-xs-12">
        @Html.TextBoxFor(model => model.CityName, new { @class = "form-control", @readonly = true })
    </div>
</div>
<div class="form-group">
    @Html.Label(@Resource.Type, new { @class = "control-label col-md-2 col-sm-3 col-xs-12" })
    <div class="col-md-10 col-sm-9 col-xs-12">
        @Html.TextBoxFor(model => model.TypeName, new { @class = "form-control", @readonly = true })
    </div>
</div>
<div class="form-group">
    @Html.Label(@Resource.Priority, new { @class = "control-label col-md-2 col-sm-3 col-xs-12" })
    <div class="col-md-10 col-sm-9 col-xs-12">
        @Html.TextBoxFor(model => model.Priority, new { @class = "form-control", @readonly = true })
    </div>
</div>
<div class="form-group">
    @Html.Label(@Resource.Image, new { @class = "control-label col-md-2 col-sm-3 col-xs-12" })
    <div class="col-md-10 col-sm-9 col-xs-12">
        @Html.FilesManagerTextboxFor(model => model.ImagesUrl, new { @class = "form-control", @readonly = true })
    </div>
</div>
<div class="form-group">
    @Html.Label(@Resource.Address, new { @class = "control-label col-md-2 col-sm-3 col-xs-12" })
    <div class="col-md-10 col-sm-9 col-xs-12">
        <div class="form-control html-area" readonly>
            @Html.Raw(Model.Address)
        </div>
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(model => model.ImagesMap, new { @class = "control-label col-md-2 col-sm-3 col-xs-12" })
    <div class="col-md-10 col-sm-9 col-xs-12">
        <div class="form-control html-area" readonly>
            @Html.Raw(Model.ImagesMap)
        </div>
    </div>
</div>
<div class="form-group">
    @Html.Label(@Resource.Summary, new { @class = "control-label col-md-2 col-sm-3 col-xs-12" })
    <div class="col-md-10 col-sm-9 col-xs-12">
        <div class="form-control html-area" readonly>
            @Html.Raw(Model.Summary)
        </div>
    </div>
</div>