@using PagedList.Mvc
@model PagedList.IPagedList<Admin.Models.DiscountItemViewModel>
@using Store.Service.ProductServices;
@using Store.Service.Helper;

<table class="table table-hover">
    <thead class="thead-inverse">
        <tr>
            <th class="width-4">
                @Resource.DiscountName
            </th>
            <th class="width-4">
                @Resource.DiscountType
            </th>
            <th class="width-3">
                @Resource.Discount
            </th>
            <th class="width-3">
                @Resource.StartDate
            </th>
            <th class="width-3">
                @Resource.EndDate
            </th>
            <th class="width-3">
                @Resource.Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @item.DiscountTypeString
                </td>
                <td>
                    @if (item.UsePercentage)
                    {
                        @Html.Raw(@item.DiscountPercent.ToPercentageString());
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.DiscountAmount)
                    }
                </td>
                <td>
                    @item.StartDate
                </td>
                <td>
                    @item.EndDate
                </td>
                <td>
                    <div class="btn-group">
                        <a href="@Url.Action("Edit", new { id = item.ID })" class="btn btn-default">
                            <i class="fa fa-pencil" aria-hidden="true"></i> @Resource.Edit
                        </a>
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                            <span class="caret"></span>
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>

                        <ul class="dropdown-menu btn-dropdown-menu" role="menu">
                            <li>
                                <a href="@Url.Action("Delete", new { id = item.ID })">
                                    <i class="fa fa-trash-o" aria-hidden="true"></i> @Resource.Delete
                                </a>
                            </li>
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="pull-left">
    @string.Format(Resource.PaginationTxt, Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber, @Model.PageCount)
</div>
<div class="pull-right">
    @Html.PagedListPager(Model, page => Url.Action("ListDiscount",
        new { page, DiscountType = ViewBag.DiscountType, DiscountName = ViewBag.DiscountName, CouponCode = ViewBag.CouponCode
        }),
        PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions() {
            HttpMethod = "Post", UpdateTargetId = "list", OnSuccess = string.Format("UpdatePagingAjaxUrl(this)") }))
</div>