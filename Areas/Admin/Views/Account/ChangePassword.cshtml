@model Admin.Models.AdminChangePasswordViewModel

@{
    ViewBag.Title = Resource.ChangePassword;
}


<div class="page-title">
    <div class="title_left">
        <h3>
            @Resource.Account
            <small>@Resource.ChangePassword</small>
        </h3>
    </div>
</div>

<div class="main-content">
    @using (Html.BeginForm(""))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.UserName, new { @class = "control-label col-md-2 col-sm-3 col-xs-12" })
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <span readonly class="form-control">@Model.UserName</span>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2 col-sm-3 col-xs-12" })
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <span readonly class="form-control">@Model.Email</span>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-2 col-sm-3 col-xs-12" })
                <div class="col-md-10 col-sm-9 col-xs-12">
                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @type = "password" })
                    @Html.ValidationMessageFor(model => model.Password)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ConfirmPassword, new { @class = "control-label col-md-2 col-sm-3 col-xs-12" })
                <div class="col-md-10 col-sm-9 col-xs-12">
                    @Html.TextBoxFor(model => model.ConfirmPassword, new { @class = "form-control", @type = "password" })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-sm-offset-3 col-md-10 col-sm-9 col-xs-12">
                    <input type="submit" value='@Resource.ChangePassword' class="btn btn-primary" />
                    @Html.ActionLink(@Resource.Skip, "Index", null, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    }
</div>