@model Admin.Models.LoginViewModel

@{
    ViewBag.Title = @Resource.Login;
    Layout = "~/Areas/Admin/Views/Shared/_LoginLayout.cshtml";
}

<div>
    <a class="hiddenanchor" id="signin"></a>
    <div class="login_wrapper">
        <div class="animate form login_form">
            <section class="login_content">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, null))
                {
                    <h1>@Resource.Login</h1>
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, null ,new { @class = "alert alert-danger" })

                    <div>
                        @Html.ValidationMessageFor(model => model.UserName)
                        @Html.TextBoxFor(model => model.UserName, new
                        {
                            @class = "form-control",
                            @placeholder = Html.DisplayPlaceHolderFor(model => model.UserName)
                        })
                    </div>
                    <div>
                        @Html.ValidationMessageFor(model => model.Password)
                        @Html.PasswordFor(model => model.Password, new
                        {
                            @class = "form-control",
                            @placeholder = Html.DisplayPlaceHolderFor(model => model.Password)
                        })
                    </div>
                    <div class="clearfix">
                        <input type="submit" class="btn btn-default submit" value="@Resource.Login" />
                    </div>
                    <div class="clearfix"></div>
                    <div class="separator">
                        <div>
                            <h1><i class="fa fa-paw"></i> TABWEB!</h1>
                            <p>©2018 All Rights Reserved</p>
                        </div>
                    </div>
                }
            </section>
        </div>
    </div>
</div>