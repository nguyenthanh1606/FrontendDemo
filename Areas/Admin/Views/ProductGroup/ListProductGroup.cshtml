@using PagedList.Mvc
@model PagedList.IPagedList<Admin.Models.ProductGroupOverviewViewModel>

@Styles.Render("~/Content/pagedList")

<table class="table table-hover">
    <thead class="thead-inverse">
        <tr>
            <th class="width-1">@Html.DisplayNameFor(model => model.FirstOrDefault().GroupID)</th>
            <th class="width-7">@Html.DisplayNameFor(model => model.FirstOrDefault().Title)</th>
            <th class="width-7">@Html.DisplayNameFor(model => model.FirstOrDefault().GroupParentID)</th>
            <th class="width-2">@Html.DisplayNameFor(model => model.FirstOrDefault().Priority)</th>
            <th class="width-3">@Resource.Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.GroupID</td>
                <td>@item.Title</td>
                <td>@item.GroupParentName</td>
                <td>@item.Priority</td>
                <td>
                    <div class="btn-group">
                        <a href="@Url.Action("Update", new { id = item.GroupID })" class="btn btn-default">
                            <i class="fa fa-pencil" aria-hidden="true"></i> @Resource.Edit
                        </a>
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                            <span class="caret"></span>
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>

                        <ul class="dropdown-menu btn-dropdown-menu" role="menu">
                            <li>
                                <a href="@Url.Action("Details", new { id = item.GroupID })">
                                    <i class="fa fa-eye" aria-hidden="true"></i> @Resource.View
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Delete", new { id = item.GroupID })">
                                    <i class="fa fa-trash-o" aria-hidden="true"></i> @Resource.Delete
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("ProductAds", "ProductGroupAds", new { productGroupID = item.GroupID })">
                                    <i class="fa fa-trash-o" aria-hidden="true"></i> @Resource.ProductAds
                                </a>
                            </li>
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="pull-left">
    @string.Format(Resource.PaginationTxt, Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber, @Model.PageCount)
</div>
<div class="pull-right">
    @Html.PagedListPager(Model, page => Url.Action("ListProductGroup",
        new { page, parentGroupId = ViewBag.ParentGroupId, searchString = ViewBag.SearchString }),
        PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions() {
            HttpMethod = "GET", UpdateTargetId = "list", OnSuccess = string.Format("UpdatePagingAjaxUrl(this)") }))
</div>