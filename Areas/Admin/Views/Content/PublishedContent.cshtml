@model Admin.Models.PublishedContentFilterViewModel

@{
    ViewBag.Title = Resource.PublishedContents;
}


<div class="page-title">
    <div class="title_left">
        <h3>
            @Resource.Contents
            <small>@Resource.PublishedContents</small>
        </h3>
    </div>
    <div class="title_right">
        <div class="pull-right">
            <span class="btn btn-primary" id="updateRankBtn">@Resource.UpdateRank</span>
        </div>
    </div>
</div>

<div class="main-content">
    @using (Ajax.BeginForm("ListPublishedContent", "Content", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "list", HttpMethod = "Get" }, new { id = "filter_div" }))
        {
        <div class="form-group clearfix">
            <div class="col-md-6 col-sm-6 col-xs-12">
                <label class="control-label">@Resource.ListContentsInCategory</label>
                @Html.DropDownListFor(m => m.CategoryId, ViewBag.groupHierarchy as SelectList, Resource.All,new { @class = "form-control ddl_select2" })
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <label class="control-label">@Resource.Search</label>
                @Html.TextBoxFor(model => model.SearchString, null, new { @class = "form-control", @placeholder = @Resource.SearchPlaceholder, @aria_describedby = "basic-addon2" })
            </div>
        </div>
    }

    <div id="list">
        @{Html.RenderAction("ListPublishedContent", "Content", new { filter = Model, page = ViewBag.Page });}
    </div>
</div>



@section scripts{
    <script>
        $('#CategoryId').change(function () {
            $('#filter_div').submit();
        });

        $("#updateRankBtn").click(function () {
            $('#mainform').submit();
        });

        $('#filter_div').submit(function () {
            ChangeUrl({ CategoryId: $('#CategoryId').val(), SearchString: $('#SearchString').val() });
        });

        function PauseContent(id, title) {
            $('#pause_id').val(id);
            $('#pause_title').text(title);
            $('#pause_reason').val("");
            $('#pauseModal').modal('show');
        }

        function SubmitPause() {
            $('#pauseModal').modal('hide');
            $('#pause_form').submit();
            $('.modal-backdrop').remove();
        }

        $(document).ready(function () {
            ReplaceSelect2('@Request.Cookies["lang"].Value.Substring(0, 2)');
        });
    </script>
}
