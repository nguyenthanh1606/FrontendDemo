
@model Admin.Models.AdViewModel

@{
    ViewBag.Title = Resource.Advertisement;
}
@section css{
    @Styles.Render("~/Content/css/elFinder")
}

<div class="page-title">
    <div class="title_left">
        <h3>
            @Resource.Advertisement
            <small>@Resource.Update</small>
        </h3>
    </div>
</div>

<div class="main-content">
    @using (Html.BeginForm("Update", "Advertisement", FormMethod.Post ))
    {
        <div class="form-horizontal">
            @Html.AntiForgeryToken()
            @Html.Hidden("ReturnUrl", (string)ViewBag.ReturnUrl)
            @Html.EditorForModel()

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 col-sm-9 col-xs-12">
                    <input type="submit" value="@Resource.Update" class="btn btn-primary" />
                    <button class="btn btn-default" type="reset">@Resource.Reset</button>
                    <a href="@(ViewBag.ReturnUrl?? @Url.Action("Index"))" class="btn btn-default">@Resource.Skip</a>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/elFinder")
    <script type="text/javascript" src="~/Scripts/ckeditor/ckeditor.js"></script>
    <script type="text/javascript" src="~/Scripts/ckeditor/adapters/jquery.js"></script>
    <script>
        InitElf('@Url.Action("GetFile", "Files")', '@Request.Cookies["lang"].Value.Substring(0, 2)');

        ReplaceSelect2('@Request.Cookies["lang"].Value.Substring(0, 2)');
        ReplaceCKEditor();
    </script>
}


