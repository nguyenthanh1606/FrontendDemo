
@{
    ViewBag.Title = Resource.Orders;
}
@model Admin.Models.OrderFilterViewModel

<div class="page-title">
    <div class="title_left">
        <h3>@Resource.Orders</h3>
    </div>
</div>

<div class="main-contain">
    @using (Ajax.BeginForm("List", "Order", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "list", HttpMethod = "Get" }, new { id = "filter_div" }))
    {
        <div class="form-group clearfix">
            <div class="col-md-4 col-sm-6 col-xs-12">
                <label>@Resource.Status</label>
                @Html.DropDownListFor(m => m.Status, ViewBag.ListOrderStatus as SelectList, @Resource.All, new { @class = "form-control ddl_select2" })
            </div>
            <div class="col-md-4 col-sm-6 col-xs-12">
                <label>@Resource.ShippingStatus</label>
                @Html.DropDownListFor(m => m.ShippingStatus, ViewBag.ListShippingStatus as SelectList, @Resource.All, new { @class = "form-control ddl_select2" })
            </div>
            <div class="col-md-4 col-sm-6 col-xs-12">
                <label>@Resource.PaymentStatus</label>
                @Html.DropDownListFor(m => m.PaymentStatus, ViewBag.ListPaymentStatus as SelectList, @Resource.All, new { @class = "form-control ddl_select2" })
            </div>
        </div>
    }

    <div id="list">
        @{Html.RenderAction("List", "Order", new { Model, page = ViewBag.Page });}
    </div>
</div>

@section scripts{
    <script>        ;
        $('#Status, #ShippingStatus, #PaymentStatus').change(function () {
            var status = $('#Status').val();
            $('#filter_div').submit();

            ChangeUrl({ Status: $('#Status').val(), ShippingStatus: $('#ShippingStatus').val(), PaymentStatus: $('#PaymentStatus').val() });
        });

        $(document).ready(function () {
            ReplaceSelect2('@Request.Cookies["lang"].Value.Substring(0, 2)');
        });
    </script>
}
