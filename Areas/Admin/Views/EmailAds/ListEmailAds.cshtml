@model PagedList.IPagedList<Admin.Models.EmailAdViewModel>
@using PagedList.Mvc;

<table class="table table-hover">
    <thead class="thead-inverse">
        <tr>
            <th class="width-2">@Resource.ID</th>
            <th class="width-2">@Resource.CreationDate</th>
            <th class="width-5">@Resource.Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.CreationDate</td>
                <td>@item.Email</td>
            </tr>
        }
    </tbody>
</table>

<div class="pull-left">
    @string.Format(Resource.PaginationTxt, Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber, @Model.PageCount)
</div>
<div class="pull-right">
    @Html.PagedListPager(Model, page => Url.Action("ListEmailAds",
        new { page }),
        PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "list" }))
</div>

